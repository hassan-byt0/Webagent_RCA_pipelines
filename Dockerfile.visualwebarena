FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV DISPLAY=:99

# Install system dependencies as root
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        wget \
        gnupg \
        ca-certificates \
        curl \
        software-properties-common \
        build-essential \
        libnss3 \
        libatk1.0-0 \
        libatk-bridge2.0-0 \
        libcups2 \
        libdrm2 \
        libxcomposite1 \
        libxrandr2 \
        libgbm1 \
        libasound2 \
        libpangocairo-1.0-0 \
        libgtk-3-0 \
        xvfb \
        x11-utils \
        libx11-xcb1 \
        libxcb-dri3-0 \
        libxshmfence1 \
        libxdamage1 \
        libxext6 \
        libxfixes3 \
        libxi6 \
        libxinerama1 \
        libxkbcommon-x11-0 \
        libxrender1 \
        libxtst6 \
        libappindicator3-1 \
        xauth \
        ffmpeg \
        fonts-unifont \
        fonts-ubuntu \
        python3 \
        python3-pip \
        python3-venv \
        unzip \
        lsof \
        && rm -rf /var/lib/apt/lists/*

# Install Python 3.11
RUN apt-get update && \
    apt-get install -y software-properties-common && \
    add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y python3.11 python3.11-venv python3.11-dev python3.11-tk && \
    rm -rf /var/lib/apt/lists/*

# Set Python 3.11 as the default python and python3
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1 && \
update-alternatives --set python /usr/bin/python3.11 && \
update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1 && \
update-alternatives --set python3 /usr/bin/python3.11 && \
apt-get update && \
apt-get install -y python3-pip && \
pip3 install --upgrade pip


COPY requirements.txt requirements.txt

RUN apt-get remove python3-blinker -y
RUN pip install blinker==1.7.0
RUN pip install -r requirements.txt

# Install Miniconda for the visualwebarena environment
RUN wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O /tmp/miniconda.sh && \
/bin/bash /tmp/miniconda.sh -b -p /opt/conda && \
rm /tmp/miniconda.sh && \
/opt/conda/bin/conda update -n base -c defaults conda -y

WORKDIR /app

COPY collector/agents/visualwebarena/requirements.txt collector/agents/visualwebarena/requirements.txt
RUN /opt/conda/bin/conda create -n visualwebarena python=3.10 -y
RUN /opt/conda/bin/conda run -n visualwebarena python -m pip install -r collector/agents/visualwebarena/requirements.txt
RUN /opt/conda/bin/conda run -n visualwebarena python -m pip install playwright==1.30.0 && \
    /opt/conda/bin/conda run -n visualwebarena playwright install
RUN /opt/conda/bin/conda run -n visualwebarena python -m pip install transformers && \
    /opt/conda/bin/conda run -n visualwebarena python -c "import torch; from transformers import Blip2Processor, Blip2ForConditionalGeneration; Blip2Processor.from_pretrained('Salesforce/blip2-flan-t5-xl', cache_dir='/app/huggingface_cache'); Blip2ForConditionalGeneration.from_pretrained('Salesforce/blip2-flan-t5-xl', cache_dir='/app/huggingface_cache')"

COPY collector collector
COPY evaluation evaluation

ENV visualwebarena_CONDA_ENV="/opt/conda/envs/visualwebarena"

COPY run.sh /app/run.sh
